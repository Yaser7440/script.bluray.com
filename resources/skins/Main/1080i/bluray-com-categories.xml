<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<window>
	<onload>SetProperty(script.bluray.com-reviews_open,0,10000)</onload>
	<defaultcontrol>200</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	<controls>
		<control type="group">
			<posx>0</posx>
			<posy>0</posy>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>1080</height>
				<texture>script-bluray-com-white_square.png</texture>
				<colordiffuse>FF404040</colordiffuse>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>130</height>
				<texture>script-bluray-com-white_square.png</texture>
				<colordiffuse>FF000000</colordiffuse>
			</control>
		</control>
		<control type="group" id="200">
			<defaultcontrol>100</defaultcontrol>
			<control type="list" id="100">
				<posx>320</posx>
				<posy>30</posy>
				<width>1100</width>
				<height>100</height>
				<scrolltime>200</scrolltime>
				 <orientation>horizontal</orientation>
		         <focusposition>2</focusposition>
				<itemlayout width="260">
					<control type="label">
						<posx>130</posx>
						<posy>0</posy>
						<width>260</width>
						<height>100</height>
						<font>font30</font>
						<aligny>center</aligny>
						<textcolor>FFA0A0A0</textcolor>
						<align>center</align>
						<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
					</control>
				</itemlayout>
				<focusedlayout width="260">
					<control type="group">
						<visible>StringCompare(Window(10000).Property(script.bluray.com-reviews_open),1)</visible>
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>260</width>
							<height>100</height>
							<texture border="25">script-bluray-com-white_square_round_top.png</texture>
							<colordiffuse>FFB8C0D0</colordiffuse>
						</control>
						<control type="image">
							<posx>0</posx>
							<posy>85</posy>
							<width>260</width>
							<height>15</height>
							<texture>script-bluray-com-white_fade_up.png</texture>
							<colordiffuse>FF000000</colordiffuse>
						</control>
					</control>
					<control type="label">
						<posx>130</posx>
						<posy>0</posy>
						<width>260</width>
						<height>100</height>
						<font>font30</font>
						<aligny>center</aligny>
						<textcolor>FF3090FF</textcolor>
						<align>center</align>
						<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>
